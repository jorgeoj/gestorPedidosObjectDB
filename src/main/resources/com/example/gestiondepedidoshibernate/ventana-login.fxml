<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="700.0" styleClass="fondo"
            stylesheets="@style.css" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.gestiondepedidoshibernate.controllers.LoginController">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="90.0" fitWidth="82.0" nodeOrientation="INHERIT" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/personaInicioSesion.png"/>
                    </image>
                </ImageView>
                <Label text="Iniciar sesi칩n" textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="20.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtUser" maxWidth="400.0" promptText="Usuario"
                           style="-fx-background-color: #ffffff; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px;">
                    <VBox.margin>
                        <Insets bottom="40.0"/>
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="txtPassword" maxWidth="400.0" promptText="Contrase침a"
                               style="-fx-background-color: #ffffff; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px;">
                    <VBox.margin>
                        <Insets bottom="40.0"/>
                    </VBox.margin>
                </PasswordField>
                <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="150.0"
                        stylesheets="@style.css" text="Iniciar sesi칩n" textFill="WHITE">
                    <VBox.margin>
                        <Insets top="25.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/login.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </center>
    <bottom>
        <Label fx:id="info" text="Introduzca sus datos para iniciar sesi칩n" textFill="WHITE"
               BorderPane.alignment="CENTER">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </bottom>
</BorderPane>
