<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="fondoVentanaDetalles" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.gestiondepedidoshibernate.controllers.OrderViewDetailsController">
    <center>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
            <children>
                <BorderPane>
                    <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </VBox.margin>
                    <center>
                        <HBox alignment="TOP_RIGHT">
                            <children>
                                <Button fx:id="btnCerrarSesion" mnemonicParsing="false" onAction="#logout"
                                        stylesheets="@style.css" text="Cerrar sesión">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="83.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/logout.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </center>
                </BorderPane>
                <BorderPane>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <center>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volver"
                                        stylesheets="@style.css" text="Volver">
                                    <graphic>
                                        <ImageView fitHeight="19.0" fitWidth="53.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/volver-flecha.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                            <padding>
                                <Insets left="20.0"/>
                            </padding>
                        </HBox>
                    </center>
                </BorderPane>
                <BorderPane id="contenedor" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
                    <top>
                        <Label id="labelPedidos" fx:id="lbPrueba" text="Detalles del pedido:" textFill="#006eb7"
                               BorderPane.alignment="CENTER">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <BorderPane.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </BorderPane.margin>
                        </Label>
                    </top>
                    <center>
                        <TableView fx:id="tvItem" prefHeight="350.0" prefWidth="557.0" stylesheets="@style.css"
                                   BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="cIdItem" prefWidth="75.0" text="ID"/>
                                <TableColumn fx:id="cCPedido" prefWidth="75.0" text="Código de pedido"/>
                                <TableColumn fx:id="cCantidad" prefWidth="75.0" text="Cantidad"/>
                                <TableColumn fx:id="cProducto" prefWidth="75.0" text="Producto"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <BorderPane.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0"/>
                            </BorderPane.margin>
                            <styleClass>
                                <String fx:value="column-header"/>
                                <String fx:value="table-cell"/>
                            </styleClass>
                        </TableView>
                    </center>
                    <bottom>
                        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="10.0"/>
                            </BorderPane.margin>
                            <children>
                                <Button fx:id="btnImprimir" mnemonicParsing="false" onAction="#imprimir"
                                        text="Imprimir">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="21.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/imprimir.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="btnAnyadir" mnemonicParsing="false" onAction="#anyadir"
                                        stylesheets="@style.css" text="Añadir">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="52.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/pedidos.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminar"
                                        stylesheets="@style.css" text="Eliminar">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="22.0" fitWidth="70.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/eliminar.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </bottom>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </padding>
                </BorderPane>
            </children>
        </VBox>
    </center>
</BorderPane>
